<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_headd"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/headd"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/image_headd"
        android:gravity="center"
        android:paddingRight="15sp"
        android:paddingLeft="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in to your existant account "
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/person"
            android:paddingLeft="20dp"
            android:hint="Type your email..."
            android:textColor="@color/clr_light_blue"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edit_text__blue_border"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/person"
            android:paddingLeft="20dp"
            android:textColor="@color/clr_light_blue"
            android:textStyle="bold"
            android:hint="Password"
            android:inputType="numberPassword"
            android:background="@drawable/bg_white_edit_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_btn"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Connect using"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_facebook_btn"
                android:text="Facebook"
                android:paddingLeft="8dp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_google_btn"
                android:text="Google"
                android:paddingLeft="8dp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"/>

            <TextView
                android:id="@+id/Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/clr_light_blue"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>