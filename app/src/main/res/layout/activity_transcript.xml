<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TranscriptActivity"
    android:background="@drawable/bg1">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/transcript_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transcript_message"
                android:textSize="25sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
            <EditText
                android:id="@+id/transcript_name_et"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Transcript name"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                />
            <EditText
                android:id="@+id/transcript_et"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Transcript"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/start_recording_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_container1"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableLeft="@drawable/mic_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/white"
                android:padding="10dp"
                android:text="Start recording"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <Button
                android:id="@+id/save_recording_button"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="@string/savet"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:background="@drawable/text_container1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/save_icon"
                android:drawableTint="@color/white"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>